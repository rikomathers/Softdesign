<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Define the background properties like color etc -->
    <item android:id="@android:id/background">
        <shape>
            <corners
                android:radius="8dp"
                />
            <gradient
                android:startColor="#38D39F"
                android:centerColor="#38D39F"
                android:centerY="1.0"
                android:endColor="#38D39F"
                android:angle="270"
                />
        </shape>
    </item>

    <!-- Define the progress properties like start color, end color etc -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners
                    android:radius="8dp"
                    />
                <gradient
                    android:startColor="#6D3EFF"
                    android:centerColor="#6D3EFF"
                    android:centerY="1.0"
                    android:endColor="#6D3EFF"
                    android:angle="270"
                    />
            </shape>
        </clip>
    </item>
</layer-list>